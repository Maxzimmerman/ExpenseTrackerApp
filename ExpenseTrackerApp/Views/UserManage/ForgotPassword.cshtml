@using ExpenseTrackerApp.Models.ViewModels.UserViewModels
@model SendResetEmailModelView

<body class="dashboard">
    <div class="authincation">
        <div class="container">
            <div class="row justify-content-center align-items-center g-0">
                <div class="col-xl-8">
                    <div class="row g-0">
                        <div class="col-lg-6">
                            <div class="welcome-content">
                                <div class="welcome-title">
                                    <div class="mini-logo">
                                        <a asp-controller="Home" asp-action="Home">
                                            <img src="~/images/logo-white.png" alt="" width="30" />
                                        </a>
                                    </div>
                                    <h3>Welcome to Trackify</h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="auth-form">
                                <h4>Reset</h4>
                                <form method="post" asp-controller="UserManage" asp-action="ForgotPassword">
                                    <div class="row">
                                        <div class="col-12 mb-3">
                                            <label class="form-label">Email</label>
                                            <input asp-for="EmailAddress" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                            <span asp-validation-for="EmailAddress" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="mt-3 d-grid gap-2">
                                        <button type="submit"
                                                class="btn btn-primary me-8 text-white">
                                            Submit
                                        </button>
                                    </div>
                                </form>
                                <p class="mt-3 mb-0 undefined">
                                    Already have an account?<a class="text-primary"
                                    asp-controller="UserManage" asp-action="SignIn"> Sign In</a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>