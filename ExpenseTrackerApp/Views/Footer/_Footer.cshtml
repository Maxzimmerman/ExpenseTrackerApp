@{
    var footer = new Footer();
    if (ViewData["Footer"] != null)
        footer = ViewData["Footer"] as Footer;
}

<div class="footer">
    <div class="container">
        <div class="row">
            <div class="col-xl-6">
                <div class="copyright">
                    <p>
                        © Copyright
                        <script>
                            var CurrentYear = new Date().getFullYear()
                            document.write(CurrentYear)
                        </script>
                        <a href="#">@footer.CopryRightHolder</a> I All Rights Reserved
                    </p>
                </div>
            </div>
            <div class="col-xl-6">
                <div class="footer-social">
                    <ul>
                        @{
                            if(footer.SocialLinks != null)
                            {
                                foreach (SocialLink socialLink in footer.SocialLinks)
                                {
                                    <li><a href="@socialLink.Url"><i class="fi @socialLink.IconClass"></i></a></li>
                                }
                            }
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
